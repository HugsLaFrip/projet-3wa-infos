{% extends 'admin/_nav_admin.html.twig' %}

{% block body_admin %}
	<h2>Liste des groupes de catégorie</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category_group in category_groups %}
				<tr>
					<td>{{ category_group.name }}</td>
					<td>
						<div class="buttons">
							<a href="{{ path('category_group_edit', {'id': category_group.id}) }}" class="btn btn_edit">
								<i class="fas fa-pencil-alt"></i>
							</a>
							{% include "admin/category_group/_delete_form.html.twig" %}
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun groupe de catégorie trouvé</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<div class="buttons">
		<a href="{{ path('category_group_new') }}" class="btn btn_submit">Créer un nouveau groupe de catégorie</a>
	</div>
{% endblock %}
