{% extends 'admin/_nav_admin.html.twig' %}

{% block body_admin %}
	<h2>Liste des catégories</h2>

	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name }}</td>
					<td class="buttons">
						<a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn_edit">
							<i class="fas fa-pencil-alt"></i>
						</a>
						{% include "admin/category/_delete_form.html.twig" %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucune catégorie enregistrée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<div class="buttons">
		<a href="{{ path('category_new') }}" class="btn btn_submit">Créer une nouvelle catégorie</a>
	</div>
{% endblock %}
