{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h2>Article "{{ article.title }}"</h2>

		{% include "article/_return.html.twig" %}

		<table class="table_responsive">
			<tbody>
				<tr>
					<th>Titre</th>
					<td>{{ article.title }}</td>
				</tr>
				<tr>
					<th>Contenu</th>
					<td>{{ article.content }}</td>
				</tr>
				<tr>
					<th>Image</th>
					<td><img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="image de l'article {{ article.title }}" class="thumbails"></td>
				</tr>
				<tr>
					<th>Crée le</th>
					<td>{{ article.createdAt|date('d/m/Y') }}</td>
				</tr>
				<tr>
					<th>Modifié le</th>
					<td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y') : 'Non modifié' }}</td>
				</tr>
			</tbody>
		</table>
		<div class="buttons">
			<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn_edit">
				<i class="fas fa-pencil-alt"></i>
			</a>
			{{ include('article/_delete_form.html.twig') }}
		</div>

	</div>
{% endblock %}
