{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h2>Liste des articles</h2>

		<table>
			<thead>
				<tr>
					<th>Titre</th>
					<th>Contenu</th>
					<th>Image</th>
					<th>Crée le</th>
					<th>Modifié le</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for article in articles %}
					<tr>
						<td>{{ article.title }}</td>
						<td>{{ article.content }}</td>
						<td><img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="image de l'article {{ article.title }}" width="100px"></td>
						<td>{{ article.createdAt|date('d/m/Y') }}</td>
						<td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y') : 'Non modifié' }}</td>
						<td class="buttons">
							<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn_show">
								<i class="fas fa-eye"></i>
							</a>
							<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn_edit">
								<i class="fas fa-pencil-alt"></i>
							</a>
							{{ include('article/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<div class="buttons">
			<a href="{{ path('article_new') }}" class="btn btn_submit">Créer un nouvel article</a>
		</div>
	</div>
{% endblock %}
